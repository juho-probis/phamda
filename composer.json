{
    "name": "phamda/phamda",
    "description": "Functional programming with automatically curried functions",
    "keywords": ["functional", "curry"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mikael Pajunen",
            "email": "mikael.pajunen@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.1",
        "nikic/php-parser": "^1.4",
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {"Phamda\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {
            "Phamda\\CodeGen\\": "build/",
            "Phamda\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "build": [
            "@php build/build.php",
            "@fix-cs"
        ],
        "fix-cs": "php-cs-fixer fix",
        "test": "phpunit"
    }
}
